// ✅ Brand Story Section 3 Slider (1장씩 넘기는 구조)
// HTML 구조 그대로 유지하면서 작동하도록 JS로 제어


const cards = document.querySelectorAll('.section-3 [class^="card-"]');
const prevBtns = document.querySelectorAll('.ingredient-carousel .fa-chevron-left');
const nextBtns = document.querySelectorAll('.ingredient-carousel .fa-chevron-right');


let currentIndex = 0;


// ✅ 처음엔 첫 카드만 보이게 설정
cards.forEach((card, i) => {
    card.style.display = i === 0 ? 'block' : 'none';
});


// ✅ 슬라이드 이동 함수
function showCard(index) {
    cards.forEach((card, i) => {
        card.style.display = i === index ? 'block' : 'none';
    });
}


// ✅ 이전 버튼
prevBtns.forEach(btn => {
    btn.addEventListener('click', () => {
        currentIndex = (currentIndex - 1 + cards.length) % cards.length;
        showCard(currentIndex);
    });
});


// ✅ 다음 버튼
nextBtns.forEach(btn => {
    btn.addEventListener('click', () => {
        currentIndex = (currentIndex + 1) % cards.length;
        showCard(currentIndex);
    });
});

